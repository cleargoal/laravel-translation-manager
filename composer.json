{
  "name": "cleargoal/laravel-translation-manager",
  "description": "Manage Laravel Translations",
  "keywords": [
    "laravel",
    "translations",
    "translator"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Barry vd. Heuvel",
      "email": "cleargoal@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/support": "^9|^10|^11|^12",
    "illuminate/translation": "^9|^10|^11|^12",
    "symfony/finder": "^6|^7"
  },
  "require-dev": {
    "orchestra/testbench": "^7|^8|^9|^10"
  },
  "suggest": {
     "tanmuhittin/laravel-google-translate": "If you want to translate using Google API"
  },
  "autoload": {
    "psr-4": {
      "Cleargoal\\TranslationManager\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cleargoal\\TranslationManager\\Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.6-dev"
    },
    "laravel": {
      "providers": [
        "Cleargoal\\TranslationManager\\ManagerServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
